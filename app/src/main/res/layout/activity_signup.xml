<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/tophead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/goBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rotationY="180"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginLeft="50dp"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:background="@drawable/toolbar_design"
            android:text="."
            android:textColor="@color/darkgrey"
            android:layout_below="@id/toolbar"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrlView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tophead">
    <RelativeLayout
        android:id="@+id/layoutSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        >
        <TextView
            android:id="@+id/signintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:background="@color/colorApp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="-10dp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/btnSignin"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/signintext"
            android:text="Signin"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:layout_marginLeft="120dp"
            android:textAlignment="textEnd"
            android:textColor="#f00"
            android:id="@+id/sgn_resp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:layout_below="@+id/signintext"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="First name"
            android:id="@+id/firstinput"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:layout_below="@+id/firstinput"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:inputType="text"
            android:paddingRight="10dp"
            android:hint="Last name"
            android:id="@+id/lastinput"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:layout_below="@+id/lastinput"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:inputType="text"
            android:paddingRight="10dp"
            android:hint="Phone number"
            android:id="@+id/emailinput"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:layout_below="@+id/emailinput"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:paddingRight="10dp"
            android:hint="Password"
            android:id="@+id/passwordinput"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:layout_below="@+id/passwordinput"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:paddingRight="10dp"
            android:hint="Comfirm Password"
            android:id="@+id/cpasswordinput"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn"
            android:text="Register"
            android:textColor="#ffffff"
            android:layout_below="@+id/cpasswordinput"
            android:layout_marginTop="30dp"
            android:id="@+id/signbtn"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="Already have account? Sign In"
            android:textAllCaps="false"
            android:textColor="#CC361F"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/signbtn"
            android:layout_marginTop="30dp"
            android:outlineSpotShadowColor="#fff"
            android:outlineAmbientShadowColor="#fff"
            android:id="@+id/acc_login"/>
    </RelativeLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorApp"
        android:text="@string/footer"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_below="@id/scrlView"/>
</RelativeLayout>