<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/grey"
    >

    <LinearLayout
        android:id="@+id/lnyProductItem"
        android:layout_width="200dp"
        android:layout_height="270dp"
        android:layout_margin="5dp"
        android:background="@drawable/recycler_products_design"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/tvProductId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Ibishyimbo"
            android:textSize="17dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/imgx"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/girl_marketing"
            android:background="@drawable/round_image"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Ibishyimbo"
            android:textSize="17dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ibishyimbo byiza bya calcium biryoshye"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1200 RWF"
                android:textColor="@color/green"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tvProductSoldQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 sold in 5"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>